{
  "name": "cep-ai-commit-generator",
  "displayName": "Auto Commiter",
  "description": "Weâ€™re building an AI-powered Commit Message Generator as a VS Code extension that automatically generates clear, conventional commit messages from staged Git diffs.",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "publisher": "thaonguyen",
  "icon": "icon.png",
  "contributes": {
    "commands": [
      {
        "command": "aicommits.generate.commit.messages",
        "title": "AI: Generate Commit Messages"
      },
      {
        "command": "aicommits.generate.review.comments",
        "title": "AI: Generate Review Comments"
      }
    ],
    "configuration": {
      "title": "AI Commit Generator",
      "properties": {
        "aiCommitGenerator.commitFormat": {
          "type": "string",
          "default": "CEP-XXX: {message}",
          "description": "Template format for the commit message"
        },
        "aiCommitGenerator.commitType": {
          "type": "string",
          "enum": ["none", "feat", "fix", "docs", "refactor"],
          "default": "none",
          "description": "Select the commit type to use for generated messages"
        },
        "aiCommitGenerator.maxMessageLength": {
          "type": "number",
          "default": 500,
          "description": "Maximum allowed length for the commit message"
        },
        "aiCommitGenerator.openAIKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for using GPT-4o model."
        },
        "aiCommitGenerator.authToken": {
          "type": "string",
          "default": "",
          "description": "Authorization token for backend API (AUTH_SECRET)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build": "webpack --mode production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
